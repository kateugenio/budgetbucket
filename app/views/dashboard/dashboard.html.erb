<div class="row valign-wrapper">
  <div class="col s9">
    <h1 class="teal-text lighten-3">My Accounts</h1>
  </div>
  <div class="col s3">
    <a class="waves-effect waves-light btn" id="connect-external-bank"><i class="material-icons left">cloud</i>Add Account</a>
  </div>
</div>

<div class="row">
  <div class="col s12 m5">
    <ul class="collection with-header">
      <li class="collection-header"><h4>Linked Accounts</h4></li>
      <% if @user.accounts.empty? %>
        <li class="collection-item">You have no linked accounts. Click the Add Account button to link to your bank account.</li>
      <% else %>
        <% @user.accounts.each do |account| %>
          <li class="collection-item">
            <div><%= account.account_name %>
              <%= link_to account_path(account), class: "secondary-content" do %>
                <i class="material-icons">send</i>
              <% end %>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>

<div id="external-accounts-list-modal" class="modal"></div>
