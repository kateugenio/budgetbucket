<div class="row my-3">
  <div class="col-lg-1"></div>
  <div class="col-lg-3 mt-5">
    <div class="card mt-5">
      <div class="card-body">
        <h5 class="card-title"><%= @account.account_name %></h5>
        <p class="card-text"><%= @account.mask %></p>
        <p class="card-text"><%= @account.account_type.titleize %></p>
        <p class="card-text"><%= @account.institution_name %></p>

        <%= link_to accounts_fetch_balance_path(@account), class: 'btn btn-primary', id: 'loading-spinnter-btn', remote: true do %>
          <span class="spinner-grow spinner-grow-sm d-none" role="status" aria-hidden="true"></span>
          <span id='loading-text'>Get Latest Balance</span>
        <% end %>
        <hr>
        <p class='mt-3'>Available Balance: <span id='account-balance' class='badge badge-success'><%= @account.balance.nil? ? '--' : number_to_currency(@account.balance, precision: 2) %></span></p>
        <small class='form-text text-muted'>As of:</small>
        <small class='form-text text-muted momentize-format' id='balance-as-of-date' data-datetime='<%= @account.balance_as_of_date.to_i %>'></small>
        <hr>
        <p class='mt-3'>To Budget With: <span id='account-budget-amount' class='badge badge-success'></span></p>
      </div>
    </div>
  </div>

  <div class="col-lg-7 mt-4">
    <div class="text-right">
      <button type="button" class="btn btn-outline-default mb-3">Add a bucket</button>
    </div>

    <div class="card card-stats mb-4 mb-lg-0 mt-3">
      <div class="card-body">
          <div class="row">
              <div class="col">
                  <h5 class="card-title text-uppercase text-muted mb-0">Mortgage</h5>
                  <span class="h2 font-weight-bold mb-0">Balance: $200.00</span>
              </div>
              <div class="col-4">
                <form>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <input type="text" class="form-control" placeholder="Enter amount">
                      </div>
                    </div>
                  </div>
                </form>
              </div>
          </div>
          <p class="mt-3 mb-0 text-muted text-sm">
              <span class="text-success mr-2">Next due date: 12/12/2019</span>
              <span class="text-nowrap">Since last month</span>
          </p>
      </div>
    </div>

    <div class="card card-stats mb-4 mb-lg-0 mt-3">
      <div class="card-body">
          <div class="row">
              <div class="col">
                  <h5 class="card-title text-uppercase text-muted mb-0">Car</h5>
                  <span class="h2 font-weight-bold mb-0">Balance: $200.00</span>
              </div>
              <div class="col-4">
                <form>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <input type="text" class="form-control" placeholder="Enter amount">
                      </div>
                    </div>
                  </div>
                </form>
              </div>
          </div>
          <p class="mt-3 mb-0 text-muted text-sm">
              <span class="text-success mr-2">Next due date: 12/19/2019</span>
              <span class="text-nowrap">Since last month</span>
          </p>
      </div>
    </div>

    <div class="card card-stats mb-4 mb-lg-0 mt-3">
      <div class="card-body">
          <div class="row">
              <div class="col">
                  <h5 class="card-title text-uppercase text-muted mb-0">Internet</h5>
                  <span class="h2 font-weight-bold mb-0">Balance: $150.00</span>
              </div>
              <div class="col-4">
                <form>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <input type="text" class="form-control" placeholder="Enter amount">
                      </div>
                    </div>
                  </div>
                </form>
              </div>
          </div>
          <p class="mt-3 mb-0 text-muted text-sm">
              <span class="text-success mr-2">Next due date: 12/30/2019</span>
              <span class="text-nowrap">Since last month</span>
          </p>
      </div>
    </div>

    <div class="card card-stats mb-4 mb-lg-0 mt-3">
      <div class="card-body">
          <div class="row">
              <div class="col">
                  <h5 class="card-title text-uppercase text-muted mb-0">Spending</h5>
                  <span class="h2 font-weight-bold mb-0">Balance: $450.00</span>
              </div>
              <div class="col-4">
                <form>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <input type="text" class="form-control" placeholder="Enter amount">
                      </div>
                    </div>
                  </div>
                </form>
              </div>
          </div>
          <p class="mt-3 mb-0 text-muted text-sm">
              <span class="text-success mr-2">Next due date: N/A</span>
              <span class="text-nowrap">Since last month</span>
          </p>
      </div>
    </div>

    <div id="bucket-totals" class="text-right mt-3">
      <button type="button" class="btn btn-primary">
        <span>Total</span>
        <span class="badge badge-white">$1000.00</span>
      </button>
    </div>
  </div>

  <div class="col-lg-1"></div>
</div>


