<!DOCTYPE html>
<html>
  <head>
    <title>Budget Bucket</title>
    <%= csrf_meta_tags %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdn.plaid.com/link/v2/stable/link-initialize.js"></script>
  </head>

  <body class="budget-bucket-theme <%= controller.controller_name %>"
        data-controller="<%= controller.controller_path %>"
        data-action="<%= controller.action_name %>">
    <div class="container-fluid">
      <% if ['sessions', 'registrations', 'passwords'].exclude?(controller.controller_name) %>
        <div class="row grey darken-4">
          <div class="col s3" style="height: 100vh;">
            <%= render partial: 'layouts/sidenav' %>
          </div>
          <div class="col s9" style="height: 100vh;">
            <%= yield %>
          </div>
        </div>
      <% else %>
        <%= yield %>
      <% end %>
    </div>
  </body>
</html>
